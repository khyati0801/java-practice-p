<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 
  
<bean id="Student" class="com.rivet.Springexample.FristSpring.Student">  
<property name="id" value="101"></property> 
<property name="name" value="khyati patel"></property>  
<property name="address" ref="Address"></property>  

</bean>

<bean id="Address" class="com.rivet.Springexample.FristSpring.Address">  
<property name="Streetno" value="102" ></property> 
<property name="Streetname" value="kachigam" ></property>  
<property name="cityname" value=" nani daman" ></property> 
</bean>
<bean name ="Student1" class = "com.rivet.Springexample.FristSpring.Student">
      <constructor-arg  value="102"/>
      <constructor-arg  value="jatin patel"/>
      <constructor-arg  ref="Address"/>
   </bean> 
</beans>  